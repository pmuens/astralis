{
  "name": "hardhat",
  "version": "0.1.0",
  "description": "Hardhat Template for EVM-based dApps.",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" hardhat coverage",
    "deploy": "hardhat --network $NETWORK deploy",
    "dev": "hardhat node --hostname 0.0.0.0 --watch",
    "export": "hardhat --network $NETWORK export --export exports/$NETWORK.json",
    "format": "prettier --config .prettierrc.js --write .",
    "lint": "eslint --cache -c .eslintrc.js --fix . && solhint -c .solhintrc.js --fix **/*.sol",
    "metrics": "cross-env REPORT_GAS=true yarn test",
    "test": "cross-env TS_NODE_TRANSPILE_ONLY=1 hardhat test",
    "verify": "hardhat --network $NETWORK etherscan-verify --solc-input"
  },
  "author": {
    "name": "Philipp Muens",
    "url": "https://github.com/pmuens"
  },
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.8.0",
    "hardhat-deploy": "^0.9.22",
    "hardhat-gas-reporter": "^1.0.6",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  }
}
